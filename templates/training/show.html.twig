{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ training.school }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ training.name }}</td>
            </tr>
            <tr>
                <th>Datebeginning</th>
                <td>{{ training.datebeginning ? training.datebeginning|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Dateend</th>
                <td>{{ training.dateend ? training.dateend|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ training.summary }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ training.link }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ training.path }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ training.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('training_index') }}">back to list</a>

    <a href="{{ path('training_edit', {'id': training.id}) }}">edit</a>

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
